      <HBox alignment="CENTER_RIGHT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="60.0" prefWidth="200.0" spacing="30.0" style="-fx-background-color: #333333;" BorderPane.alignment="CENTER">
         <children>
            <JFXProgressBar fx:id="_progressBar" prefHeight="1.0" prefWidth="400.0" progress="1.0" style="-fx-background-color: red;" />
            <JFXSlider fx:id="_volumeSlider" max="1.0" prefHeight="16.0" prefWidth="252.0" value="0.5">
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin>
            </JFXSlider>
         </children>
      </HBox>
   </bottom>
</BorderPane>
